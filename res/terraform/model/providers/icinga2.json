{
  ".schema_version": "1",
  "name": "icinga2",
  "type": "provider",
  "version": "v0.2.0",
  "provider": {
    "api_password": {
      "Type": "String",
      "Required": true,
      "Description": "The password for authenticating to the Icinga2 server.\n",
      "DefaultFunc": "ENV(ICINGA2_API_PASSWORD)"
    },
    "api_url": {
      "Type": "String",
      "Required": true,
      "Description": "The address of the Icinga2 server.\n",
      "DefaultFunc": "ENV(ICINGA2_API_URL)"
    },
    "api_user": {
      "Type": "String",
      "Required": true,
      "Description": "The user to authenticate to the Icinga2 Server as.\n",
      "DefaultFunc": "ENV(ICINGA2_API_USER)"
    },
    "insecure_skip_tls_verify": {
      "Type": "Bool",
      "Optional": true,
      "Description": "Disable TLS verify when connecting to Icinga2 Server\n",
      "DefaultFunc": "UNKNOWN"
    }
  },
  "resources": {
    "icinga2_checkcommand": {
      "arguments": {
        "Type": "Map",
        "Optional": true
      },
      "command": {
        "Type": "String",
        "Required": true
      },
      "name": {
        "Type": "String",
        "Required": true,
        "Description": "Name"
      },
      "templates": {
        "Type": "List",
        "Required": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      }
    },
    "icinga2_host": {
      "address": {
        "Type": "String",
        "Required": true
      },
      "check_command": {
        "Type": "String",
        "Required": true
      },
      "groups": {
        "Type": "List",
        "Optional": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "hostname": {
        "Type": "String",
        "Required": true,
        "Description": "Hostname"
      },
      "templates": {
        "Type": "List",
        "Optional": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "vars": {
        "Type": "Map",
        "Optional": true
      }
    },
    "icinga2_hostgroup": {
      "display_name": {
        "Type": "String",
        "Required": true,
        "Description": "Display name of Host Group"
      },
      "name": {
        "Type": "String",
        "Required": true,
        "Description": "name"
      }
    },
    "icinga2_notification": {
      "command": {
        "Type": "String",
        "Required": true
      },
      "hostname": {
        "Type": "String",
        "Required": true
      },
      "interval": {
        "Type": "Int",
        "Optional": true,
        "Default": {
          "Type": "int",
          "Value": "1800"
        }
      },
      "servicename": {
        "Type": "String",
        "Optional": true
      },
      "templates": {
        "Type": "List",
        "Optional": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "users": {
        "Type": "List",
        "Optional": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "vars": {
        "Type": "Map",
        "Optional": true
      }
    },
    "icinga2_service": {
      "check_command": {
        "Type": "String",
        "Required": true,
        "Description": "CheckCommand"
      },
      "hostname": {
        "Type": "String",
        "Required": true,
        "Description": "Hostname"
      },
      "name": {
        "Type": "String",
        "Required": true,
        "Description": "ServiceName"
      },
      "vars": {
        "Type": "Map",
        "Optional": true
      }
    },
    "icinga2_user": {
      "email": {
        "Type": "String",
        "Optional": true
      },
      "name": {
        "Type": "String",
        "Required": true,
        "Description": "Username"
      }
    }
  },
  "data-sources": {}
}