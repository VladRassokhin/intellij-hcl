        }
      },
      "early_renewal_hours": {
        "Type": "Int",
        "Optional": true,
        "Description": "Number of hours before the certificates expiry when a new certificate will be generated",
        "Default": {
          "Type": "int",
          "Value": "0"
        }
      },
      "ip_addresses": {
        "Type": "List",
        "Optional": true,
        "Description": "List of IP addresses to use as subjects of the certificate",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "is_ca_certificate": {
        "Type": "Bool",
        "Optional": true,
        "Description": "Whether the generated certificate will be usable as a CA certificate"
      },
      "key_algorithm": {
        "Type": "String",
        "Required": true,
        "Description": "Name of the algorithm to use to generate the certificate's private key"
      },
      "private_key_pem": {
        "Type": "String",
        "Required": true,
        "Description": "PEM-encoded private key that the certificate will belong to"
      },
      "subject": {
        "Type": "List",
        "Required": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "common_name": {
              "Type": "String",
              "Optional": true
            },
            "country": {
              "Type": "String",
              "Optional": true
            },
            "locality": {
              "Type": "String",
              "Optional": true
            },
            "organization": {
              "Type": "String",
              "Optional": true
            },
            "organizational_unit": {
              "Type": "String",
              "Optional": true
            },
            "postal_code": {
              "Type": "String",
              "Optional": true
            },
            "province": {
              "Type": "String",
              "Optional": true
            },
            "serial_number": {
              "Type": "String",
              "Optional": true
            },
            "street_address": {
              "Type": "List",
              "Optional": true,
              "Elem": {
                "Type": "SchemaElements",
                "ElementsType": "String"
              }
            }
          }
        }
      },
      "validity_end_time": {
        "Type": "String",
        "Computed": true
      },
      "validity_period_hours": {
        "Type": "Int",
        "Required": true,
        "Description": "Number of hours that the certificate will remain valid for"
      },
      "validity_start_time": {
        "Type": "String",
        "Computed": true
      }
    }
  },
  "data-sources": {
    "tls_public_key": {
      "algorithm": {
        "Type": "String",
