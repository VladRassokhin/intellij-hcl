{
  ".schema_version": "1",
  "name": "tls",
  "type": "provider",
  "version": "v2.0.0",
  "provider": {},
  "resources": {
    "tls_cert_request": {
      "cert_request_pem": {
        "Type": "String",
        "Computed": true
      },
      "dns_names": {
        "Type": "List",
        "Optional": true,
        "Description": "List of DNS names to use as subjects of the certificate",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "ip_addresses": {
        "Type": "List",
        "Optional": true,
        "Description": "List of IP addresses to use as subjects of the certificate",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "key_algorithm": {
        "Type": "String",
        "Required": true,
        "Description": "Name of the algorithm to use to generate the certificate's private key"
      },
      "private_key_pem": {
        "Type": "String",
        "Required": true,
        "Description": "PEM-encoded private key that the certificate will belong to"
      },
      "subject": {
        "Type": "List",
        "Required": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "common_name": {
              "Type": "String",
              "Optional": true
            },
            "country": {
              "Type": "String",
              "Optional": true
            },
            "locality": {
              "Type": "String",
              "Optional": true
            },
            "organization": {
              "Type": "String",
              "Optional": true
            },
            "organizational_unit": {
              "Type": "String",
              "Optional": true
            },
            "postal_code": {
              "Type": "String",
              "Optional": true
            },
            "province": {
              "Type": "String",
              "Optional": true
            },
            "serial_number": {
              "Type": "String",
              "Optional": true
            },
            "street_address": {
              "Type": "List",
              "Optional": true,
              "Elem": {
                "Type": "SchemaElements",
                "ElementsType": "String"
              }
            }
          }
        }
      }
    },
    "tls_locally_signed_cert": {
      "allowed_uses": {
        "Type": "List",
        "Required": true,
        "Description": "Uses that are allowed for the certificate",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "ca_cert_pem": {
        "Type": "String",
        "Required": true,
        "Description": "PEM-encoded CA certificate"
      },
      "ca_key_algorithm": {
        "Type": "String",
        "Required": true,
        "Description": "Name of the algorithm used to generate the certificate's private key"
      },
      "ca_private_key_pem": {
        "Type": "String",
        "Required": true,
        "Description": "PEM-encoded CA private key used to sign the certificate"
      },
      "cert_pem": {
        "Type": "String",
        "Computed": true
      },
      "cert_request_pem": {
        "Type": "String",
        "Required": true,
        "Description": "PEM-encoded certificate request"
      },
      "early_renewal_hours": {
        "Type": "Int",
        "Optional": true,
        "Description": "Number of hours before the certificates expiry when a new certificate will be generated",
        "Default": {
          "Type": "int",
          "Value": "0"
        }
      },
      "is_ca_certificate": {
        "Type": "Bool",
        "Optional": true,
        "Description": "Whether the generated certificate will be usable as a CA certificate"
      },
      "validity_end_time": {
        "Type": "String",
        "Computed": true
      },
      "validity_period_hours": {
        "Type": "Int",
        "Required": true,
        "Description": "Number of hours that the certificate will remain valid for"
      },
      "validity_start_time": {
        "Type": "String",
        "Computed": true
      }
    },
    "tls_private_key": {
      "algorithm": {
        "Type": "String",
        "Required": true,
        "Description": "Name of the algorithm to use to generate the private key"
      },
      "ecdsa_curve": {
        "Type": "String",
        "Optional": true,
        "Description": "ECDSA curve to use when generating a key",
        "Default": {
          "Type": "string",
          "Value": "P224"
        }
      },
      "private_key_pem": {
        "Type": "String",
        "Computed": true
      },
      "public_key_fingerprint_md5": {
        "Type": "String",
        "Computed": true
      },
      "public_key_openssh": {
        "Type": "String",
        "Computed": true
      },
      "public_key_pem": {
        "Type": "String",
        "Computed": true
      },
      "rsa_bits": {
        "Type": "Int",
        "Optional": true,
        "Description": "Number of bits to use when generating an RSA key",
        "Default": {
          "Type": "int",
          "Value": "2048"
        }
      }
    },
    "tls_self_signed_cert": {
      "allowed_uses": {
        "Type": "List",
        "Required": true,
        "Description": "Uses that are allowed for the certificate",
