{
  ".schema_version": "1",
  "name": "opsgenie",
  "type": "provider",
  "version": "v0.1.0",
  "provider": {
    "api_key": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "ENV(OPSGENIE_API_KEY)"
    }
  },
  "resources": {
    "opsgenie_team": {
      "description": {
        "Type": "String",
        "Optional": true
      },
      "member": {
        "Type": "List",
        "Optional": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "role": {
              "Type": "String",
              "Optional": true,
              "Default": {
                "Type": "string",
                "Value": "user"
              }
            },
            "username": {
              "Type": "String",
              "Required": true
            }
          }
        }
      },
      "name": {
        "Type": "String",
        "Required": true
      }
    },
    "opsgenie_user": {
      "full_name": {
        "Type": "String",
        "Required": true
      },
      "locale": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "en_US"
        }
      },
      "role": {
        "Type": "String",
        "Required": true
      },
      "timezone": {
        "Type": "String",
        "Optional": true,
        "Default": {
          "Type": "string",
          "Value": "America/New_York"
        }
      },
      "username": {
        "Type": "String",
        "Required": true
      }
    }
  },
  "data-sources": {
    "opsgenie_user": {
      "full_name": {
        "Type": "String",
        "Computed": true
      },
      "role": {
        "Type": "String",
        "Computed": true
      },
      "username": {
        "Type": "String",
        "Required": true
      }
    }
  }
}