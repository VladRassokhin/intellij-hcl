{
  ".schema_version": "1",
  "name": "triton",
  "type": "provider",
  "version": "v0.5.1",
  "provider": {
    "account": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "MENV(TRITON_ACCOUNT,SDC_ACCOUNT)"
    },
    "insecure_skip_tls_verify": {
      "Type": "Bool",
      "Optional": true,
      "DefaultFunc": "ENV(TRITON_SKIP_TLS_VERIFY)"
    },
    "key_id": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "MENV(TRITON_KEY_ID,SDC_KEY_ID)"
    },
    "key_material": {
      "Type": "String",
      "Optional": true,
      "DefaultFunc": "MENV(TRITON_KEY_MATERIAL,SDC_KEY_MATERIAL)"
    },
    "url": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "MENV(TRITON_URL,SDC_URL)"
    },
    "user": {
      "Type": "String",
      "Required": true,
      "DefaultFunc": "MENV(TRITON_USER,SDC_USER)"
    }
  },
  "resources": {
    "triton_fabric": {
      "description": {
        "Type": "String",
        "Optional": true,
        "Description": "Description of network"
      },
      "fabric": {
        "Type": "Bool",
        "Description": "Whether or not this network is on a fabric",
        "Computed": true
      },
      "gateway": {
        "Type": "String",
        "Optional": true,
        "Description": "Gateway IP"
      },
      "internet_nat": {
        "Type": "Bool",
        "Optional": true,
        "Description": "Whether or not a NAT zone is provisioned at the Gateway IP address",
        "Default": {
          "Type": "bool",
          "Value": "true"
        }
      },
      "name": {
        "Type": "String",
        "Required": true,
        "Description": "Network name"
      },
      "provision_end_ip": {
        "Type": "String",
        "Required": true,
        "Description": "Last assignable IP on the network"
      },
      "provision_start_ip": {
        "Type": "String",
        "Required": true,
        "Description": "First IP on the network that can be assigned"
      },
      "public": {
        "Type": "Bool",
        "Description": "Whether or not this is an RFC1918 network",
        "Computed": true
      },
      "resolvers": {
        "Type": "List",
        "Optional": true,
        "Description": "List of IP addresses for DNS resolvers",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "routes": {
        "Type": "Map",
        "Optional": true,
        "Description": "Map of CIDR block to Gateway IP address",
        "Computed": true
      },
      "subnet": {
        "Type": "String",
        "Required": true,
        "Description": "CIDR formatted string describing network address space"
      },
      "vlan_id": {
        "Type": "Int",
        "Required": true,
        "Description": "VLAN on which the network exists"
      }
    },
    "triton_firewall_rule": {
      "description": {
        "Type": "String",
        "Optional": true,
        "Description": "Human-readable description of the rule"
      },
      "enabled": {
        "Type": "Bool",
        "Optional": true,
        "Description": "Indicates if the rule is enabled",
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "global": {
        "Type": "Bool",
        "Description": "Indicates whether or not the rule is global",
        "Computed": true
      },
      "rule": {
        "Type": "String",
        "Required": true,
        "Description": "firewall rule text"
      }
    },
    "triton_instance_template": {
      "__timeouts__": [
        "create",
        "read",
        "update",
        "delete"
      ],
      "firewall_enabled": {
        "Type": "Bool",
        "Optional": true,
        "Description": "Whether to enable the firewall for group instances",
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "image": {
        "Type": "String",
        "Required": true,
        "Description": "UUID of the image"
      },
      "metadata": {
        "Type": "Map",
        "Optional": true,
        "Description": "Metadata for group instances",
        "Computed": true
      },
      "networks": {
        "Type": "List",
        "Optional": true,
        "Description": "Network IDs for group instances",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "package": {
        "Type": "String",
        "Required": true,
        "Description": "Package name used for provisioning"
      },
      "tags": {
        "Type": "Map",
        "Optional": true,
        "Description": "Tags for group instances",
        "Computed": true
      },
      "template_name": {
        "Type": "String",
        "Required": true,
        "Description": "Friendly name for the instance template"
      },
      "userdata": {
        "Type": "String",
        "Optional": true,
        "Description": "Data copied to instance on boot",
        "Computed": true
      }
    },
    "triton_key": {
      "__timeouts__": [
        "create",
        "read",
        "update",
        "delete"
      ],
      "key": {
        "Type": "String",
        "Required": true,
        "Description": "Content of public key from disk in OpenSSH format"
      },
      "name": {
        "Type": "String",
        "Optional": true,
        "Description": "Name of the key (generated from the key comment if not set)",
        "Computed": true
      }
    },
    "triton_machine": {
      "__timeouts__": [
        "create",
        "read",
        "update",
        "delete"
      ],
      "administrator_pw": {
        "Type": "String",
        "Optional": true,
        "Description": "Administrator's initial password (Windows only)"
      },
      "affinity": {
        "Type": "List",
        "Optional": true,
        "Description": "Label based affinity rules for assisting instance placement",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "cloud_config": {
        "Type": "String",
        "Optional": true,
        "Description": "copied to machine on boot"
      },
      "cns": {
        "Type": "List",
        "Optional": true,
        "Description": "Container Name Service",
        "MaxItems": 1,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "disable": {
              "Type": "Bool",
              "Optional": true,
              "Description": "Disable CNS for this instance (after create)"
            },
            "services": {
              "Type": "List",
              "Optional": true,
              "Description": "Assign CNS service names to this instance",
              "Elem": {
                "Type": "SchemaElements",
                "ElementsType": "String"
              }
            }
          }
        }
      },
      "compute_node": {
        "Type": "String",
        "Description": "UUID of the server on which the instance is located",
        "Computed": true
      },
      "created": {
        "Type": "String",
        "Description": "When the machine was created",
        "Computed": true
      },
      "dataset": {
        "Type": "String",
        "Description": "Dataset URN with which the machine was provisioned",
        "Computed": true
      },
      "deletion_protection_enabled": {
        "Type": "Bool",
        "Optional": true,
        "Description": "Whether to enable deletion protection for this machine",
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "disk": {
        "Type": "Int",
        "Description": "Amount of disk allocated to the machine (in Gb)",
        "Computed": true
      },
      "domain_names": {
        "Type": "List",
        "Description": "List of domain names from Triton CNS",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "firewall_enabled": {
        "Type": "Bool",
        "Optional": true,
        "Description": "Whether to enable the firewall for this machine",
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "image": {
        "Type": "String",
        "Required": true,
        "Description": "UUID of the image"
      },
      "ips": {
        "Type": "List",
        "Description": "IP addresses assigned to the machine",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "locality": {
        "Type": "List",
        "Optional": true,
        "Description": "UUID based locality hints for assisting placement behavior",
        "MaxItems": 1,
        "Deprecated": "`locality` was replaced by `affinity` in the underlying Triton API.",
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "close_to": {
              "Type": "List",
              "Optional": true,
              "Description": "UUIDs of other instances to attempt to provision alongside",
              "Elem": {
                "Type": "SchemaElements",
                "ElementsType": "String"
              }
            },
            "far_from": {
              "Type": "List",
              "Optional": true,
              "Description": "UUIDs of other instances to attempt not to provision alongside",
              "Elem": {
                "Type": "SchemaElements",
                "ElementsType": "String"
              }
            }
          }
        }
      },
      "memory": {
        "Type": "Int",
        "Description": "Amount of memory allocated to the machine (in Mb)",
        "Computed": true
      },
      "metadata": {
        "Type": "Map",
        "Optional": true,
        "Description": "Machine metadata"
      },
      "name": {
        "Type": "String",
        "Optional": true,
        "Description": "Friendly name for machine",
        "Computed": true
      },
      "networks": {
        "Type": "List",
        "Optional": true,
        "Description": "Desired network IDs",
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "nic": {
        "Type": "Set",
        "Optional": true,
        "Description": "Network interface",
        "Computed": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "gateway": {
              "Type": "String",
              "Description": "IPv4 gateway",
              "Computed": true
            },
            "ip": {
              "Type": "String",
              "Description": "NIC's IPv4 address",
              "Computed": true
            },
            "mac": {
              "Type": "String",
              "Description": "NIC's MAC address",
              "Computed": true
            },
            "netmask": {
              "Type": "String",
              "Description": "IPv4 netmask",
              "Computed": true
            },
            "network": {
              "Type": "String",
              "Required": true,
              "Description": "ID of the network to which the NIC is attached"
            },
            "primary": {
              "Type": "Bool",
              "Description": "Whether this is the machine's primary NIC",
              "Computed": true
            },
            "state": {
              "Type": "String",
              "Description": "Provisioning state of the NIC",
              "Computed": true
            }
          }
        }
      },
      "package": {
        "Type": "String",
        "Required": true,
        "Description": "The package for use for provisioning"
      },
      "primaryip": {
        "Type": "String",
        "Description": "Primary (public) IP address for the machine",
        "Computed": true
      },
      "root_authorized_keys": {
        "Type": "String",
        "Optional": true,
        "Description": "Authorized keys for the root user on this machine",
        "Computed": true
      },
      "tags": {
        "Type": "Map",
        "Optional": true,
        "Description": "Machine tags"
      },
      "type": {
        "Type": "String",
        "Description": "Machine type (smartmachine or virtualmachine)",
        "Computed": true
      },
      "updated": {
        "Type": "String",
        "Description": "When the machine was updated",
        "Computed": true
      },
      "user_data": {
        "Type": "String",
        "Optional": true,
        "Description": "Data copied to machine on boot"
      },
      "user_script": {
        "Type": "String",
        "Optional": true,
        "Description": "User script to run on boot (every boot on SmartMachines)"
      }
    },
    "triton_service_group": {
      "__timeouts__": [
        "create",
        "read",
        "update",
        "delete"
      ],
      "capacity": {
        "Type": "Int",
        "Optional": true,
        "Description": "Number of instances to launch and monitor",
        "Computed": true
      },
      "group_name": {
        "Type": "String",
        "Required": true,
        "Description": "Friendly name for the service group"
      },
      "template": {
        "Type": "String",
        "Required": true,
        "Description": "Identifier of an instance template"
      }
    },
    "triton_snapshot": {
      "machine_id": {
        "Type": "String",
        "Required": true
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "state": {
        "Type": "String",
        "Computed": true
      }
    },
    "triton_vlan": {
      "__timeouts__": [
        "create",
        "read",
        "update",
        "delete"
      ],
      "description": {
        "Type": "String",
        "Optional": true,
        "Description": "Description of the VLAN"
      },
      "name": {
        "Type": "String",
        "Required": true,
        "Description": "Unique name to identify VLAN"
      },
      "vlan_id": {
        "Type": "Int",
        "Required": true,
        "Description": "Number between 0-4095 indicating VLAN ID"
      }
    }
  },
  "data-sources": {
    "triton_account": {
      "cns_enabled": {
        "Type": "Bool",
        "Computed": true
      },
      "email": {
        "Type": "String",
        "Computed": true
      },
      "login": {
        "Type": "String",
        "Computed": true
      }
    },
    "triton_datacenter": {
      "endpoint": {
        "Type": "String",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Computed": true
      }
    },
    "triton_fabric_network": {
      "description": {
        "Type": "String",
        "Computed": true
      },
      "fabric": {
        "Type": "Bool",
        "Computed": true
      },
      "gateway": {
        "Type": "String",
        "Computed": true
      },
      "internet_nat": {
        "Type": "Bool",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "provision_end_ip": {
        "Type": "String",
        "Computed": true
      },
      "provision_start_ip": {
        "Type": "String",
        "Computed": true
      },
      "public": {
        "Type": "Bool",
        "Computed": true
      },
      "resolvers": {
        "Type": "List",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "routes": {
        "Type": "Map",
        "Computed": true,
        "Elem": {
          "Type": "SchemaElements",
          "ElementsType": "String"
        }
      },
      "subnet": {
        "Type": "String",
        "Computed": true
      },
      "vlan_id": {
        "Type": "Int",
        "Required": true
      }
    },
    "triton_fabric_vlan": {
      "description": {
        "Type": "String",
        "Optional": true
      },
      "name": {
        "Type": "String",
        "Optional": true
      },
      "vlan_id": {
        "Type": "Int",
        "Optional": true
      }
    },
    "triton_image": {
      "most_recent": {
        "Type": "Bool",
        "Optional": true,
        "Default": {
          "Type": "bool",
          "Value": "false"
        }
      },
      "name": {
        "Type": "String",
        "Optional": true
      },
      "os": {
        "Type": "String",
        "Optional": true
      },
      "owner": {
        "Type": "String",
        "Optional": true
      },
      "public": {
        "Type": "Bool",
        "Optional": true
      },
      "state": {
        "Type": "String",
        "Optional": true
      },
      "type": {
        "Type": "String",
        "Optional": true
      },
      "version": {
        "Type": "String",
        "Optional": true
      }
    },
    "triton_network": {
      "fabric": {
        "Type": "Bool",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Required": true
      },
      "public": {
        "Type": "Bool",
        "Computed": true
      }
    },
    "triton_package": {
      "disk": {
        "Type": "Int",
        "Computed": true
      },
      "filter": {
        "Type": "Set",
        "Required": true,
        "Elem": {
          "Type": "SchemaInfo",
          "Info": {
            "disk": {
              "Type": "Int",
              "Optional": true
            },
            "group": {
              "Type": "String",
              "Optional": true
            },
            "lwps": {
              "Type": "Int",
              "Optional": true
            },
            "memory": {
              "Type": "Int",
              "Optional": true
            },
            "name": {
              "Type": "String",
              "Optional": true
            },
            "swap": {
              "Type": "Int",
              "Optional": true
            },
            "vcpus": {
              "Type": "Int",
              "Optional": true
            },
            "version": {
              "Type": "String",
              "Optional": true
            }
          }
        }
      },
      "group": {
        "Type": "String",
        "Computed": true
      },
      "lwps": {
        "Type": "Int",
        "Computed": true
      },
      "memory": {
        "Type": "Int",
        "Computed": true
      },
      "name": {
        "Type": "String",
        "Computed": true
      },
      "swap": {
        "Type": "Int",
        "Computed": true
      },
      "vcpus": {
        "Type": "Int",
        "Computed": true
      },
      "version": {
        "Type": "String",
        "Computed": true
      }
    }
  }
}